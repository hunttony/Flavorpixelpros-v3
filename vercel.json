{
    "version": 2,
    

    "builds": [
      {
        "src": "/api/(*.js)",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [       
        {
          "src": "/api",
          "dest": "/api/index.js",
          "methods": ["GET", "OPTIONS"]
        },
        {
          "src": "/api/contact",
          "dest": "/api/contact.js",
          "methods": ["POST", "OPTIONS"]
        },
        {
          "src": "/api/health",
          "dest": "/api/health.js",
          "methods": ["GET", "OPTIONS"]
        },
        {
          "src": "/contact",
          "dest": "/api/contact.js",
          "methods": ["POST", "OPTIONS"],
          
          } 
      
    ],

    "env": {
      "NODE_ENV": "production"
    }
  }